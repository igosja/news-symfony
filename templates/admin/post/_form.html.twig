{% form_theme form 'bootstrap_5_layout.html.twig' %}

{{ form_errors(form) }}
{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.url) }}
    {{ form_row(form.category) }}
    {% if (form.vars.data.image) %}
        <div class="form-group">
            <label class="col-lg-3 control-label">Image</label>
            <div class="col-md-6">
                <a href="{{ path('admin_post_delete_image', {'id': form.vars.data.id}) }}">Ã—</a>
                <img src="/uploads/{{ form.vars.data.image.path }}" class="img-fluid" alt="img"/>
            </div>
        </div>
        image
    {% else %}
        {{ form_row(form.image) }}
    {% endif %}
    {{ form_row(form.translation_title) }}
    {{ form_row(form.translation_text) }}
    {{ form_row(form.is_active) }}
<div class="form-group">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
        <button type="submit" class="btn btn-default">Save</button>
    </div>
</div>
{{ form_rest(form, ['_token']) }}
{{ form_end(form, {render_rest: false}) }}
