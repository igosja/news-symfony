{% extends 'admin/base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <h1 class="text-center">{{ category.name }}</h1>
    <ul class="list-inline text-center">
        <li class="list-inline-item">
            <a class="btn btn-default" href="{{ path('admin_category') }}">List</a>
        </li>
        <li class="list-inline-item">
            <a class="btn btn-default" href="{{ path('admin_category_update', {'id': category.id}) }}">Update</a>
        </li>
        <li class="list-inline-item">
            <a class="btn btn-default" href="{{ path('admin_category_delete', {'id': category.id}) }}"
               data-confirm="Are you sure?">Delete</a>
        </li>
    </ul>
    <div class="row">
        <table class="table table-striped table-bordered detail-view">
            <tbody>
            <tr>
                <th>ID</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            {% for translation_language in translation_languages %}
                <tr>
                    <th>Translation ({{ translation_language.code }})</th>
                    <td>{{ category.translation[translation_language.code] }}</td>
                </tr>
            {% endfor %}
            <tr>
                <th>Is active</th>
                <td>{{ category.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ category.createdAt|date }}</td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{{ category.updatedAt|date }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
