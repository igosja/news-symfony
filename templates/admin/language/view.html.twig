{% extends 'base.html.twig' %}

{% block title %}Language{% endblock %}

{% block body %}
    <h1>Language</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ language.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ language.code }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ language.createdAt }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ language.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ language.name }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ language.updatedAt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_language') }}">back to list</a>

    <a href="{{ path('admin_language_update', {'id': language.id}) }}">edit</a>

    {{ include('admin/language/_delete_form.html.twig') }}
{% endblock %}
